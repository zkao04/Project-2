<%= form_for @user, :html => {class: 'new_user form-horizontal'} do |f| %>
    <div class="row"><legend class="col-md-4 col-md-offset-4">Create Account:</legend></div>
    <fieldset>
        <div class="form-group">
            <%= f.label :name, 'Name*', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :name, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :email, 'Email*', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :email, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :age, 'Age*', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.number_field :age, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :weight, 'Weight in kg*', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.number_field :weight, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :height, 'Height in cm*', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.number_field :height, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :password, 'Password*', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.password_field :password, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :password_confirmation, 'Confirm Password*', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 col-md-offset-4">
                <%= f.submit 'Create Account', class: 'btn btn-success' %>
            </div>
        </div>
    </fieldset>
<% end %>

<!-- Metric BMR Formula
Women: BMR = 655 + ( 9.6 x weight in kilos ) + ( 1.8 x height in cm ) - ( 4.7 x age in years )
Men: BMR = 66 + ( 13.7 x weight in kilos ) + ( 5 x height in cm ) - ( 6.8 x age in years ) -->
