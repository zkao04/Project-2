<div class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title"><%= @user.name %></h1>
  </div>
  <div class="panel-body">
    <p>Height: <%= @user.height %></p>
    <p>Weight: <%= @user.weight %></p>
    <p>BMR: <%= @bmr %></p>
    <p>Calorie Intakes:</p>
    <ul>
      <% @user.calorie_intakes.each do |c| %>
      <li>Date: <%= c.date.strftime("%m/%d/%Y") %> | Total calorie for the day:
        <%= (c.breakfast) + (c.lunch) + (c.dinner) + (c.snack) %></li>
        <%= link_to 'Edit', edit_calorie_intake_path(c) %>
      <%end%>
    </ul>
  </div>
  </div>
</div>
